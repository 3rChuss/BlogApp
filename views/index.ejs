<%- include('partials/header') %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% posts.forEach(post =>{ %>
                <div class="item">
                    <div class="image">
                        <img class="ui medium rounded image" src="<%= post.image %>" alt="">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%=post._id%>"><%= post.title %></a>
                        <div class="meta"><span><%= post.created.toDateString() %></span></div>
                        <div class="description">
                            <p><%- post.body.substring(0, 100) %> . . .</p>
                        </div>
                        <div class="extra">
                            <a href="/blogs/<%=post._id%>" class="ui floated basic black button">
                                Read more
                               <i class="right chevron icon"></i></a>
                        </div>
                    </div>  
                </div>
            <% }) %>
        </div>
    </div>
</div>
<%- include('partials/footer') %>