<%- include ('partials/header') %>
<div class="ui main text container">
    <div class="ui huge header">New Post</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" placeholder="Title" required>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="post[image]" placeholder="URL" required>
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="post[body]"></textarea>
        </div>
        <button class="ui secondary button" type="submit" required>Post</button>
    </form>
</div>


<%- include ('partials/footer') %>