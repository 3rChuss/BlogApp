<%- include ('partials/header') %>
<div class="ui main text container segment">
    <h1 class="huge header"><%= post.title %></h1>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= post.image %>">
            <div class="content">
                <span class=""><%= post.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%-post.body%></p>
            </div>
            <a class="ui button basic green" href="/blogs/<%= post._id%>/edit">EDIT</a>
            <form class="ui form" id="delete" action="/blogs/<%= post._id %>?_method=DELETE" method="POST">
                <button class="ui button red basic"><i class="trash alternate outline icon"></i>Delete</button>
            </form>
        </div>
    </div>
</div>

<%- include ('partials/footer') %>